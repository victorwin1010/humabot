<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:jaxws="http://cxf.apache.org/jaxws"  
    xsi:schemaLocation="   
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd   
		http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd"> 
     <!--    
    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>
     -->
	<jaxws:endpoint id ="helloWS" implementor="#helloWSImpl" />
    <bean id="helloWSImpl" class="com.jiguancheng.humabot.webservice.HelloWSImpl">
    </bean>
    
    <bean id="client" class="com.jiguancheng.humabot.webservice.HelloWS"
    	factory-bean="clientFactory" factory-method="create">
    </bean>
    <bean id="clientFactory" class="org.apache.cxf.jaxws.JaxWsProxyFactoryBean">
    	<property name="serviceClass" value="com.jiguancheng.humabot.webservice.HelloWS"/>
    	<property name="address" value="http://localhost:8080/humabot-web/ws/helloWS"/>
    </bean>
    <bean id="callCxfService" class="com.jiguancheng.humabot.webservice.CallHelloService">
    	<property name="client" ref="client"/>
    </bean>
</beans>

